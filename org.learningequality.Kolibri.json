{
    "app-id": "org.learningequality.Kolibri",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.36",
    "sdk": "org.gnome.Sdk",
    "command": "kolibri-gnome",
    "finish-args": [
        "--device=dri",
        "--env=X_CONTENT_EXTENSIONS_DIR=/app/share/kolibri-content",
        "--env=X_KOLIBRI=/app/libexec/kolibri",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=pulseaudio",
        "--socket=wayland",
        "--socket=x11"
    ],
    "add-extensions": {
        "org.learningequality.Kolibri.Content": {
            "version": "1.0",
            "directory": "share/kolibri-content",
            "subdirectories": true,
            "no-autodownload": true
        }
    },
    "modules": [
        "python3-kolibri.json",
        "python3-requests.json",
        "python3-virtualenv-api.json",
        {
            "name": "pyeverywhere",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --prefix=${FLATPAK_DEST} ."
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/kollivier/pyeverywhere.git",
                    "branch": "dev",
                    "commit": "63cdb6dd642ebce4af6a5134dbabcd4bd4f2a96d"
                }
            ]
        },
        {
            "name": "kolibri-installer-gnome",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/learningequality/kolibri-installer-gnome.git",
                    "branch": "master",
                    "commit": "b9e2df1d9ce4f3bc01431de6a9797c74a1aac791"
                }
            ]
        },
        {
            "name": "kolibri-content-dir",
            "buildsystem": "simple",
            "build-commands": [
                "install -d -m 755 ${FLATPAK_DEST}/share/kolibri-content"
            ]
        },
        {
            "name": "kolibri-wrapper",
            "buildsystem": "simple",
            "build-commands": [
                "mv ${FLATPAK_DEST}/bin/kolibri ${FLATPAK_DEST}/libexec/kolibri",
                "install -m 755 kolibri-flatpak-wrapper.py ${FLATPAK_DEST}/bin/kolibri"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "kolibri-flatpak-wrapper.py"
                }
            ]
        }
    ]
}
